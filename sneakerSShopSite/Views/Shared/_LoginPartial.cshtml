@using Models.Models
@using sneakerSShopSite.Models.ViewModels
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav rightPanel">
    <li class="nav-item rightTabs">
         <form id="formSearch" class="formSearch" asp-controller="Home" asp-action="Search">
            <input name="searchStr" class="inputSearch" type="search" placeholder="Search..." required>
            <button class="buttonSearch" type="submit">
                <i class="fa-solid fa-magnifying-glass"></i>
            </button>
        </form>
    </li>
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item rightTabs">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Account">
        <i class="fa-solid fa-user"></i>    
        </a>
    </li>
    <li class="nav-item rightTabs">
        <a  class="nav-link text-dark" asp-action="LikedGoods" asp-controller="Home" title="Liked goods">
        <i class="fa-solid fa-heart"></i>
        </a>
    </li>
    <li class="nav-item rightTabs">
        <a  class="nav-link text-dark" asp-action="Cart" asp-controller="Home" title="Cart">
        <i class="fa-solid fa-cart-shopping"></i>
        </a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Sign Up</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Sign in</a>
    </li>
}
</ul>
